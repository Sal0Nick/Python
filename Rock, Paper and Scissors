um = 'Pedra'
dois = 'Tesoura'
tres = 'Papel'
l = [um, dois, tres]
r = choice(l)
j = int(input('Digite: '))
print(' ')
print('Pedra')
print(' ')
time.sleep(0.5)
print('Papel')
print(' ')
time.sleep(0.5)
print('Tesoura')
time.sleep(0.5)
print(' ')
if r == um:
    if j == 1:
        print('\033[36mO computador jogou Pedra e você jogou Pedra')
        print(' ')
        print('\033[36mEmpate!')
    elif j == 2:
        print('\033[36mO computador jogou Pedra e você jogou Tesoura')
        print(' ')
        print('\033[31mVocê perdeu!')
    elif j == 3:
        print('\033[36mO computador jogou Pedra e você jogou Papel')
        print(' ')
        print('\033[32mVocê venceu!')
    else:
        print('\033[31mERRO: Digite um número válido')
elif r == dois:
    if j == 1:
        print('\033[36mO computador jogou Tesoura e você jogou Pedra')
        print(' ')
        print('\033[32mVocê venceu!')
    elif j == 2:
        print('\033[36mO computador jogou Tesoura e você jogou Tesoura')
        print(' ')
        print('\033[36mEmpate!')
    elif j == 3:
        print('\033[36mO computador jogou Tesoura e você jogou Papel')
        print(' ')
        print('\033[31mVocê perdeu!')
    else:
        print('\033[31mERRO: Digite um número válido')
elif r == tres:
    if j == 1:
        print('\033[36mO computador jogou Papel e você jogou Pedra')
        print(' ')
        print('\033[31mVocê perdeu!')
    elif j == 2:
        print('\033[36mO computador jogou Papel e você jogou Tesoura')
        print(' ')
        print('\033[32mVocê venceu!')
    elif j == 3:
        print('\033[36mO computador jogou Papel e você jogou Papel')
        print(' ')
        print('\033[36mEmpate!')
    else:
        print('\033[31mERRO: Digite um número válido')
