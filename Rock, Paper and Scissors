from random import choice
import time
print(' ')
print('\033[31m-'*35)
print('      \033[35mPEDRA, PAPEL E TESOURA')
print('\033[31m-'*35)
print('            \033[1;31mJ\033[1;36mO\033[1;32mG\033[1;37mA\033[1;34mD\033[1;31mA\033[1;33mS')
print('1 - Pedra')
print('2 - Tesoura')
print('3 - Papel')
